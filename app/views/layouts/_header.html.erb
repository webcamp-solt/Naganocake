<header>
  <nav class = "navbar navbar-expand-lg">
    <div class="container">
      <div class="col-12">
        <div class="row">
          <div class="col-4 d-flex align-items-center">
          <a class="navbar-brand" href="/"><span><%= image_tag ('logo.png') %></span></a>
          <button class="navbar-toggler bg-dark" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation  bg-right">
            <span class="navbar-toggler-icon "></span>
          </button>
          </div>

          <div class="col-8">
            <div class="row mt-4">
              <div class="col collapse navbar-collapse" id="navbarNavDropdown">
                <% if admin_signed_in? %>
                  <%= render 'layouts/admin_header' %>
                <% else %>
                  <%= render 'layouts/customer_header' %>
                <% end %>
              </div>
            </div>

            <div class="row pt-2">
              <div class="col text-right">
                <%= form_with url: search_path, method: :get do |f| %>
                  <%= f.text_field :content %>
                  <%= button_tag :type => "submit", :class => "btn btn-default btn-s-md" do %>
                    <i class="fa-solid fa-magnifying-glass"></i>
                  <% end %>
                <% end %>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
