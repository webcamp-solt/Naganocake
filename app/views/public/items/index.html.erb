<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'admin/genres/index', genres: @genres %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>商品一覧</h1>
      <table class='table table-inverse'>
        <tr>
          <% @items.each do |item| %>
            <td>
              <%= link_to item_path(item) do %>
                <%= image_tag item.get_image, size: "200x200" %>
                <p class="figure-caption"><%= item.name %></p>
                <p class="figure-caption">¥<%= item.with_tax_price %></p>
              <% end %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>