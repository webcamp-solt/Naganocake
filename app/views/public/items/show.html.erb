<div class='container px-5 px-sm-0'>
  <div class='row py-5'>

    <div class='col-md-2'>
      <%= render 'admin/genres/index', genres: @genres %>
    </div>

    <div class="col-md-4">
      <%= image_tag @item.get_image, size: "340x220" %>
    </div>
    <div class="col-md-6">
      <p class="h3 font-weight-bold"><%= @item.name %></p>
      <p><%= @item.description %></p>
      <p class="col pt-5">
        <span class="h3 font-weight-bold">¥<%= @item.with_tax_price %></span>(税込)
      </p>
      <div class="row justify-content-around">
        <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <% if customer_signed_in? %>
            <%= f.select :quantity, *[1..10], include_blank: "個数選択" %>
            <% if @item.sale_status %>
              <%= f.submit "カートに入れる", class: "btn btn-success" %>
            <% else %>
              <p class="btn btn-danger">売　切</p>
            <% end %>
          <% else %>
            <p class="text-center">
              ご注文は会員登録後になります<br>
              会員登録は<%= link_to "こちら", new_customer_registration_path %>
            </p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>