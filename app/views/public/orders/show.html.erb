<div class="container">
  <div class="mt-4">
    <h4 class="offset-1 mb-4"><span style="background-color: beige">注文履歴詳細</span></h4>
      <div class="row">
        <div class="col">
          <p>注文情報</p>
          <table class="table table-bordered">
            <tr>
              <td>注文日</td>
              <td><%= @order.created_at.to_s(:datetime_jp) %></td>
            </tr>
            <tr>
              <td>配送先</td>
              <td>
                〒<%= @order.zip_code %><br>
                <%= @order.address %><br>
                <%= @order.name %>
              </td>
            </tr>
            <tr>
              <td>支払方法</td>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <td>ステータス</td>
              <td><%= @order.order_status_i18n %></td>
            </tr>
          </table>
        </div>
        <div class="col">
          <p>請求情報</p>
          <table class="table table-bordered">
            <tr>
              <td>商品合計</td>
              <td><%= @order.items_total %></td>
            </tr>
            <tr>
              <td>配送料</td>
              <td><%= @order.delivery_money %></td>
            </tr>
            <tr>
              <td>ご請求金額</td>
              <td><%= @order.items_total + @order.delivery_money %></td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <p>注文内容</p>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>商品</th>
                <th>単価(税込)</th>
                <th>個数</th>
                <th>小計</th>
              </tr>
              <% @order.ordered_items.each do |order| %>
                <tr>
                  <td><%= order.item.name %></td>
                  <td><%= order.tax_price %></td>
                  <td><%= order.quantity %></td>
                  <td><%= order.tax_price * order.quantity %></td>
                </tr>
              <% end %>
            </thead>
          </table>
        </div>
      </div>
  </div>
</div>