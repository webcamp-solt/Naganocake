<div class="container">
  <div class="mt-4">
    <h4 class="offset-1">注文情報入力</h4>
    <%= form_with model: @order, url: confirm_orders_path, method: :post do |f| %>
      <h5>支払方法</h5>
        <div class="ml-5">
          <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card], :value => Order.payment_methods.key(0) %><br>
          <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:transfer], :value => Order.payment_methods.key(1) %><br>
        </div>
      <h5>お届け先</h5>
        <div class="ml-5">
          <%= f.radio_button :address_option, 0, checked: "checked" %>
          <%= f.label :address_option, "ご自身の住所", :value => 0, class: "mb-0" %>
          <div class="ml-4 mb-2">
            〒<%= current_customer.zip_code %>
            <%= current_customer.address %><br>
            <%= current_customer.full_name %>
          </div>
          <%= f.radio_button :address_option, 1 %>
          <%= f.label :address_option, "登録済住所から選択", :value => 1, class: "mb-0" %>
          <div class="ml-4 mb-2">
            <%= f.select :address_id, options_from_collection_for_select(current_customer.shipping_addresses.all, :id, :address_display) %>
          </div>
          <%= f.radio_button :address_option, 2 %>
          <%= f.label :address_option, "新しいお届け先", :value => 2, class: "mb-0" %>
          <div class="ml-4 mb-2">
            <div class="form-group">
              <%= f.label :zip_code, "郵便番号(ハイフンなし)"%>
              <%= f.text_field :zip_code %><br>
            </div>
            <div class="form-group">
              <%= f.label :address, "住所" %>
              <%= f.text_field :address %><br>
            </div>
            <div class="form-group">
              <%= f.label :name, "宛名" %>
              <%= f.text_field :name %>
            </div>
          </div>
        </div>
      <div class="text-center">
        <%= f.submit '確認画面へ進む', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>