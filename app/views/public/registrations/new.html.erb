<div class="container mt-5 offset-md-2">
  <h4 class="row"><span style="background-color:beige">　新規会員登録　</span></h4>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<div class="container mt-5 offset-md-1">
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row">
    <%= f.label :last_name,"名前", class: "field col-3" %>
    <div class="field col-3 text-right">
      <%= f.label :last_name, "(姓)　", autofocus: true %>
      <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
    </div>
    <div class="field col-3 text-right">
      <%= f.label :first_name, "(名)　" %>
      <%= f.text_field :first_name, placeholder: "道子" %>
    </div>
  </div>
  <div class="row">
    <%= f.label :last_name_kana,"フリガナ", class: "field col-3" %>
    <div class="field col-3 text-right">
      <%= f.label :last_name_kana, "(セイ)" %>
      <%= f.text_field :last_name_kana, placeholder: "レイワ" %>
    </div>
    <div class="field col-3 text-right">
      <%= f.label :first_name_kana, "(メイ)" %>
      <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
    </div>
  </div>
  <div class="row">
    <%= f.label :email, "メールアドレス", class: "field col-3" %>
    <div class="field col-3 text-right">
      <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %>
    </div>
  </div>
  <div class="row">
    <%= f.label :zip_code, "郵便番号(ハイフンなし)", class: "field col-3" %>
    <div class="field col-3 text-right">
      <%= f.text_field :zip_code, placeholder: "0000000" %>
    </div>
  </div>
  <div class="row">
    <%= f.label :address, "住所", class: "field col-3" %>
    <div class="field col-3 text-right">
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
    </div>
  </div>
  <div class="row">
    <%= f.label :phone_number, "電話番号(ハイフンなし)", class: "field col-3" %>
    <div class="field col-3 text-right">
      <%= f.text_field :phone_number, placeholder: "0000000000" %>
    </div>
  </div>
  <div class="row">
    <%= f.label :password, class: "field col-3" do %>
      <% if @minimum_password_length %>
      パスワード(<%= @minimum_password_length %> 文字以上)
      <% end %>
    <% end %>
    <div class="field col-3 text-right">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>
  <div class="row">
    <%= f.label :password_confirmation, "パスワード(確認用)", class: "field col-3" %>
    <div class="field col-3 text-right">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>
  <div class="row actions">
    <div class="col-3"></div>
    <div class="field col-3 text-center">
        　 　<%= f.submit "新規登録", class: 'mt-3 btn btn-success', style: 'width:160px' %>
      </div>
  </div>
</div>
<% end %>
<div class="container mt-5 offset-md-2">
  <h4 class="row"><span style="background-color:beige">　既に登録済みの方　</span></h4>
</div>
<%= render "public/shared/links" %>
