<div class="container mt-5 offset-md-2">
  <h4 class="row"><span style="background-color:beige">　新規会員登録　</span></h4>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="container mt-5">
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row form-group">
    <div class="col-md-3 offset-md-1">
      <%= f.label :last_name,"名前" %>
    </div>
    <div class="form-group col-md-3 text-right">
      <%= f.label :last_name, "(姓)　", autofocus: true %>
      <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
    </div>
    <div class="form-group col-md-3 text-right">
      <%= f.label :first_name, "(名)　" %>
      <%= f.text_field :first_name, placeholder: "道子" %>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-3 offset-md-1">
      <%= f.label :last_name_kana,"フリガナ" %>
    </div>
    <div class="col-md-3 text-right">
      <%= f.label :last_name_kana, "(セイ)" %>
      <%= f.text_field :last_name_kana, placeholder: "レイワ" %>
    </div>
    <div class="col-md-3 text-right">
      <%= f.label :first_name_kana, "(メイ)" %>
      <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-3 offset-md-1">
      <%= f.label :email, "メールアドレス" %>
    </div>
    <div class="col-3 text-right">
      <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-3 offset-md-1">
      <%= f.label :zip_code, "郵便番号(ハイフンなし)" %>
    </div>
    <div class="col-3 text-right">
      <%= f.text_field :zip_code, placeholder: "0000000" %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-3 offset-md-1">
      <%= f.label :address, "住所" %>
    </div>
    <div class="col-6 text-right">
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", style: 'width:475px' %>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-3 offset-md-1">
      <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
    </div>
    <div class="col-3  text-right">
      <%= f.text_field :phone_number, placeholder: "0000000000" %>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-3 offset-md-1">
      <%= f.label :password do %>
        <% if @minimum_password_length %>
        パスワード(<%= @minimum_password_length %> 文字以上)
        <% end %>
      <% end %>
    </div>
    <div class="col-3  text-right">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-md-3 offset-md-1">
      <%= f.label :password_confirmation, "パスワード(確認用)" %>
    </div>
    <div class="col-3  text-right">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>
  <div class="row actions">
    <div class="col-3"></div>
    <div class="col-3 text-center">
        　 　<%= f.submit "新規登録", class: 'mt-3 btn btn-success', style: 'width:160px' %>
      </div>
  </div>
</div>
<% end %>
<div class="container mt-5 offset-md-2">
  <h4 class="row"><span style="background-color:beige">　既に登録済みの方　</span></h4>
</div>
<%= render "public/shared/links" %>
