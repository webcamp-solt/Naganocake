<h1>配送先登録/一覧</h1>
<%= form_with model: @shipping_address, url: shipping_addresses_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :zip_code, class: 'form-control shipping_address_zip_code' %>
  </div>
  <div class="form-group">
    <%= f.label :"住所" %>
    <%= f.text_field :address, class: 'form-control shipping_address_address' %>
  </div>

  <div class="form-group">
    <%= f.label "宛名" %>
    <%= f.text_field :name, class: 'form-control shipping_address_nam' %>
  </div>

  <div class="form-group">
    <%= f.hidden_field :customer_id, :value => current_customer.id %>
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>

<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan='3'></th>
    </tr>
  </thead>
  <tbody>
    <% @shipping_addresses.each do |shipping_address| %>
      <tr>
        <td><%= shipping_address.zip_code %></td>
        <td><%= shipping_address.address %></td>
        <td><%= shipping_address.name %></td>
        <td>
          <%= link_to '編集する', edit_shipping_address_path(shipping_address), class: "btn btn-sm btn-success" %>
        </td>
        <td>
          <%= link_to '削除する', shipping_address_path(shipping_address), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
