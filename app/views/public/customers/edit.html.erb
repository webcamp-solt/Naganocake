<h2>会員情報編集</h2>
<%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
  <table>
    <tbody>
      <tr>
        <td><%= f.label :last_name, "氏名" %></td>
        <td><%= f.text_field :last_name, autofocus: true %></td>
        <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.text_field :last_name_kana %></td>
        <td><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :zip_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td colspan="3"><%= f.text_field :address, size: 47 %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :phone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "編集内容を保存" %></td>
        <td><%= link_to "退会する", customers_out_check_path %></td>
      </tr>
    </tbody>
  </table>
<% end %>