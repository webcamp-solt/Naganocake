<div class="container mt-5 offset-md-2">
  <h4 class="row"><span style="background-color:beige">　会員情報編集　</span></h4>
  <%= render 'layouts/errors', obj: @customer %>
</div>

<%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
<div class="container mt-5">
  <div class="row">
    <div class="form-group col-md-2 offset-md-1">
      <%= f.label :last_name,"氏名" %>
    </div>
    <div class="form-group col-md-3">
      <%= f.text_field :last_name, autofocus: true %>
    </div>
    <div class="form-group col-md-3">
      <%= f.text_field :first_name %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-2 offset-md-1">
      <%= f.label :last_name_kana,"フリガナ" %>
    </div>
    <div class="form-group col-md-3">
      <%= f.text_field :last_name_kana %>
    </div>
    <div class="form-group col-md-3">
      <%= f.text_field :first_name_kana %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-2 offset-md-1">
      <%= f.label :zip_code,"郵便番号" %>
    </div>
    <div class="form-group col-3">
      <%= f.text_field :zip_code %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-2 offset-md-1">
      <%= f.label :address,"住所" %>
    </div>
    <div class="form-group col-3">
      <%= f.text_field :address, style: 'width:700px' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 offset-md-1">
      <%= f.label :phone_number,"電話番号" %>
    </div>
    <div class="form-group col-3">
      <%= f.text_field :phone_number %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-2 offset-md-1">
      <%= f.label :email,"メールアドレス" %>
    </div>
    <div class="form-group col-3">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-3 offset-md-3">
      <%= f.submit "編集内容を保存", style: 'width:250px', class: "btn btn-success" %>
    </div>
    <div class="form-group col-md-3 offset-md-2"><%= link_to "退会する", customers_out_check_path, style: 'width:130px', class: "btn btn-danger" %></div>
  </div>
</div>
<% end %>