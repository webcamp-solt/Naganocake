<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>注文履歴詳細</h1>
      <table class="w-100">
        <thead class="border-top border-bottom border-Secondary bg-light">
          <tr>
            <th class="col-md-3">購入日時</th>
            <th class="col-md-3">購入者</th>
            <th class="col-md-3">注文個数</th>
            <th class="col-md-3">注文ステータス</th>
          </tr>
        </thead>
        <tbody class="border-bottom border-Secondary">
          <% @orders.each do |order| %>
            <tr>
              <td class="col-md-3">
                <%= link_to admin_orders_path(order) do %>
                  <%= order.created_at.to_s(:datetime_jp_long) %></td>
                <% end %>
              <td class="col-md-3"><%= order.customer.full_name %></td>
              <td class="col-md-3"><%= order.ordered_itemes_total(order) %></td>
              <td class="col-md-3"><%= order.order_status_i18n %></td>
            </tr>
          <% end %>
          <%= paginate @orders %>
        </tbody>
      </table>
    </div>
  </div>
</div>

