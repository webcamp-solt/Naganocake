<div class="container px-5 px-sm-0 mt-5 offset-md-2">
  <h4 class="row"><span style="background-color:beige">　会員一覧　</span></h4>
</div>
<div class='container px-5 px-sm-0 offset-md-2'>
  <div class='row'>
    <div class='col-md-8 col-md-offset-2">col-md-8 col-md-offset-2'>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.full_name, admin_customer_path(customer.id)  %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.customer_status = false %>
                  <b class="text-black-50">退会</b>
                <% else %>
                  <b class="text-success">有効</b>
                <% end %>
              </td>
            </tr>
          <% end %>
    </div>
  </div>
</div>