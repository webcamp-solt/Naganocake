<div class="container px-5 px-sm-0 mt-5 offset-md-2">
  <h4 class="row"><span style="background-color:beige">　<%= @customer.full_name %>さんの会員情報編集  　</span></h4>
</div>
<%= render 'layouts/errors', obj: @customer %>
<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
<div class="container mt-5 form-group">
  <div class="row">
    <div class="form-group col-md-2 offset-md-1">会員ID</div>
    <div class="form-group col-md-3">
      <%= @customer.id %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 offset-md-1">
      <%= f.label :last_name,"氏名" %>
    </div>
    <div class="form-group col-md-3">
      <%= f.text_field :last_name, autofocus: true %>
    </div>
    <div class="form-group col-md-3">
      <%= f.text_field :first_name %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-2 offset-md-1">
      <%= f.label :last_name_kana,"フリガナ" %>
    </div>
    <div class="form-group col-md-3">
      <%= f.text_field :last_name_kana %>
    </div>
    <div class="form-group col-md-3">
      <%= f.text_field :first_name_kana %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-2 offset-md-1">
      <%= f.label :zip_code,"郵便番号" %>
    </div>
    <div class="form-group col-3">
      <%= f.text_field :zip_code %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-2 offset-md-1">
      <%= f.label :address,"住所" %>
    </div>
    <div class="form-group col-3">
      <%= f.text_field :address, style: 'width:700px' %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-2 offset-md-1">
      <%= f.label :phone_number,"電話番号" %>
    </div>
    <div class="form-group col-3">
      <%= f.text_field :phone_number %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 offset-md-1">
      <%= f.label :email,"メールアドレス" %>
    </div>
    <div class="form-group col-3">
      <%= f.text_field :email %>
    </div>
  </div>
    <div class="row">
    <div class="form-group col-md-2 offset-md-1">
      <%= f.label :customer_status,"会員ステータス" %>
    </div>
    <div class="form-group col-3">
      <%= f.radio_button :customer_status, :false, checked: true %>
      <%= f.label :customer_status, "有効", value: false %>
      <%= f.radio_button :customer_status, :true %>
      <%= f.label :customer_status, "退会", value: true %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-2 offset-md-1"></div>
    <div class="form-group col-3">
      <%= f.submit "変更を保存", style: 'width:150px', class: "btn btn-success" %>
    </div>
  </div>
</div>
<% end %>