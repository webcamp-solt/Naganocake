<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class="col-md-10">
      <h2>商品一覧</h2>

      <table class='table'>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item)  %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <%if item.sale_status == true %>
                <%= "販売中" %>
              <% else %>
                <%= "販売停止中" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>