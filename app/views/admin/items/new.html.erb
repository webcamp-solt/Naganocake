<div class='container px-5 px-sm-0'>
<h1>商品新規登録</h1>
<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

  <div class="row mb-3 form-group">
    <label class="col-sm-2 col-form-label">商品画像</label>
    <%= f.file_field :image, class: "form-control-file user_image", accept: 'image/*' %>
  </div>

  <div class="row mb-3 form-group">
    <label class="col-sm-2 col-form-label">商品名</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control　item_name' %>
    </div>
  </div>

  <div class="row mb-3 form-group">
    <label class="col-sm-2 col-form-label">商品説明</label>
    <div class="col-sm-2 col-form-label">
      <%= f.text_area :description, class: 'form-control　item_description' %>
    </div>
  </div>

  <div class="row mb-3 form-group">
    <label class="col-sm-2 col-form-label">ジャンル</label>
    <div class="col-sm-2 form-select">
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
    </div>
  </div>

  <div class="row mb-3 form-group">
    <label class="col-sm-2 col-form-label">税抜価格</label>
    <div class="col-sm-10">
      <%= f.text_field :price, class: 'form-control　item_name' %>
    </div>
  </div>

  <div class="row mb-3 form-group">
    <label class="col-sm-2 col-form-label">販売ステータス</label>
    <div class = "form-check">
      <%= f.radio_button :sale_status, "true" %>
      <%= f.label :payment_method, "販売中" %>

      <%= f.radio_button :sale_status, "folse"%>
      <%= f.label :payment_method, "販売停止中" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>
</div>