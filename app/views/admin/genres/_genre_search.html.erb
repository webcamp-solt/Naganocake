<%= form_with url: item_search_path, method: :get, class: "row py-1 mx-1 d-flex" do |f| %>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), {include_blank: "すべての商品"}, class: "col-4 text-center" %>
  <%= f.submit 'ジャンル検索', class: "col-2 mx-1 btn btn-outline-dark" %>
<% end %>