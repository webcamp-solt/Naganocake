<div class='container px-5 px-sm-0'>
  
  <%= image_tag 'items.jpeg',  style: "width: 100%; height: 300px; object-fit:cover; " %>
  <%= render 'admin/genres/genre_search' %>
  
  <div class='row py-5'>
    <div class="col-md-10">
      <div class="row">
        <h1 class="col-3"><%= @genre.name %>一覧</h1>
        <p class="col pt-3">(全 <%= @all_items.count %> 件) </p>
      </div>

        <div class="row items_all">
          <% @genre.items.each do |item| %>
            <div class="mr-3">
              <%= link_to item_path(item) do %>
                <%= image_tag item.get_image, size: "200x150" %>
                <p class="figure-caption"><%= item.name %></p>
                <p class="figure-caption">¥<%= item.with_tax_price %></p>
              <% end %>
            </div>
          <% end %>
        </div>

    </div>
  </div>
</div>