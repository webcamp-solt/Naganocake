<h1>ジャンル一覧・追加</h1>
<div class="row">
  <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <div class="form-group">
      <%= f.label :"ジャンル名" %>
      <%= f.text_field :name, class: 'form-control genre_name' %>
    </div>
    <div class="form-group">
      <%= f.submit "新規登録", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

<div class="table">
  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>