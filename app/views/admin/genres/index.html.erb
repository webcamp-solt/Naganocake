<div class="container">
  <h1 class="text-center">ジャンル一覧・追加</h1>
  <div class="text-center mt-5 mb-5">
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <div class="form-check-inline">
        <%= f.label :"ジャンル名" %>
      </div>
      <div class="form-check-inline">
        <%= f.text_field :name, class: 'form-control genre_name' %>
      </div>
      <div class="form-check-inline">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
  <table  class='row'>
    <thead class="table col-md-12 bg-light border-top border-bottom border-secondary">
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="col-md-6 mb-5 ">
      <% @genres.first(5).each do |genre| %>
        <tr class="border-bottom border-secondary">
          <td><%= genre.name %></td>
          <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
    <tbody class="col-md-6 mb-5 ">
      <% @genres[5..10].each do |genre| %>
        <tr class="border-bottom border-secondary">
          <td><%= genre.name %></td>
          <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @genres %>
</div>